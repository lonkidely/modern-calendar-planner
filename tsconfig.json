{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@views/*": ["src/views/*"],
      "@assets/*":  ["src/assets/*"],
      "@icons/*":  ["src/assets/icons/*"],
      "@styles/*":  ["src/styles/*"],
      "@custom_types/*": ["src/types/*"]
    },
    "target": "es5",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "jsx": "react"
  },
  "exclude": ["node_modules"],
}
